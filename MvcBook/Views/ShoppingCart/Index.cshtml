@model List<MvcBook.Models.CartItem>
@{
    ViewBag.Title = "Shopping Cart";
}

<div id="ShoppingCartTitle" class="ContentHead">
    <h1>Shopping Cart</h1>
</div>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Item Total</th>
            <th>Remove Item</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Book.Price.ToString("C")</td>
                <td>
                    <input type="number" min="1" value="@item.Quantity" style="width: 40px;" />
                </td>
                <td>@(item.Quantity * item.Book.Price).ToString("C")</td>
                <td>
                    <input type="checkbox" id="Remove" />
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4"></td>
            <td><strong>Order Total: </strong></td>
            <td><strong>@(Model.Sum(item => item.Quantity * item.Book.Price).ToString("C"))</strong></td>
        </tr>
    </tfoot>
</table>
<br />